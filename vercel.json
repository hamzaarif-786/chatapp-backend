{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js", 
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1",
      "check": true
    }
  ]
}
